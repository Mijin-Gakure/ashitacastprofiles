   <inputcommands>
      <cmd input="/Warp">
            <equip>
               <lring>Warp Ring</lring>
               <rring>Dim. Ring (Dem)</rring>
            </equip>
      </cmd>
      <cmd input="/th">
         <equip>
            <waist>Chaac Belt</waist>
         </equip>
      </cmd>
      <cmd input="/DT">
         <if advanced="$DT=Off">
            <setvar name="DT" value="On" />
            <setvar name="meva" value="Off" />
            <setvar name="ACC" value="Off" />
            <addtochat color="4">DT Mode: [Enabled]</addtochat>
            <doidlegear />
         </if>
         <else>
            <setvar name="ACC" value="Off" />
            <setvar name="DT" value="Off"/>
            <setvar name="meva" value="Off"/>            
            <addtochat color="4">DT Mode: [Disabled]</addtochat>
            <doidlegear />
         </else>
      </cmd>
      <cmd input="/meva">
         <if advanced="$meva=Off">
            <setvar name="meva" value="On" />
            <setvar name="ACC" value="Off" />
            <addtochat color="4">meva Mode: [Enabled]</addtochat>
            <setvar name="DT" value="Off" />
            <doidlegear />
         </if>
         <else>
            <setvar name="ACC" value="Off" />
            <setvar name="DT" value="Off"/>
            <setvar name="meva" value="Off"/>            
            <addtochat color="4">meva Mode: [Disabled]</addtochat>
            <doidlegear />
         </else>
      </cmd>
      <cmd input="/acc">
         <if advanced="$acc=Off">
            <setvar name="ACC" value="On" />
            <setvar name="DT" value="Off"/>
            <setvar name="meva" value="Off"/>
            <addtochat color="4">ACC Mode: [Enabled]</addtochat>
            <doidlegear />
         </if>
         <else>
            <setvar name="ACC" value="Off" />
            <setvar name="DT" value="Off"/>
            <setvar name="meva" value="Off"/>
            <addtochat color="4">ACC Mode: [Disabled]</addtochat>
            <doidlegear />
         </else>
      </cmd>
              <cmd input="/clear">
            <equip set="DT"/>
        </cmd>
   </inputcommands>
   <jobability>
      <if ad_name="Hasso">
         <equip set="Hasso" />
      </if>
      <elseif ad_name="Meditate">
         <equip set="Meditate" />
      </elseif>
      <if ad_name="Meikyo Shisui">
         <equip>
            <feet>Sak. Sune-Ate +3</feet>
         </equip>
      </if>
   </jobability>
   <premagic>
      <if ad_name="Impact">
         <equip set="ImpactFC" />
      </if>
      <else>
         <equip set="Precast" />
      </else>
   </premagic>
   <midmagic>
      <if ad_skill="DarkMagic">
         <if ad_name="Drain*|Aspir*">
            <equip set="Drain" />
         </if>
         <elseif ad_name="Absorb-*">
            <equip set="Absorb" />
         </elseif>
         <else>
            <equip set="Dark" />
         </else>
         <elseif ad_name="Dread*">
            <equip set="Dread Spikes" />
         </elseif>
      </if>
      <if ad_skill="EnfeeblingMagic">
         <equip set="MACC" />
      </if>
      <if ad_skill="ElementalMagic">
         <if ad_name="Impact">
            <equip set="Impact" />
         </if>
         <else>
            <equip set="Elemental" />
         </else>
      </if>
   </midmagic>
   <idlegear>
      <if advanced="$init=0">
         <setvar name="init" value="1" />
         <addtochat color="8">Starting up SAM</addtochat>
         <command delay="1000">/macro book 5</command>
         <command delay="1500">/macro set 1</command>
         <command delay="2000">/lockstyleset 99</command>
         <command delay="2500">/addon load equipviewer</command>
      </if>

      <if p_status="engaged">

         <if advanced="$DT=On">
            <equip set="DT" />
         </if>
         <elseif advanced="$meva=On">
            <equip set="meva" />
         </elseif>
         <elseif advanced="$ACC=On">
            <equip set="acc" />
         </elseif>
         <else>
            <equip set="TP" />
         </else>

      </if>
      <elseif p_status="idle">
         <if advanced="$meva=On">
               <equip set="meva" />
         </if>
         <elseif advanced="$ACC=On">
            <equip set="acc" />
         </elseif>
         <else>
            <equip set="dt"/>
         </equip>
      </elseif>

      
      <if eq_rring="Dim. Ring (Dem)">
         <equip lock="true">
            <rring>Dim. Ring (Dem)</rring>
         </equip>
      </if>
      <if eq_lring="Warp Ring">
         <equip lock="true">
            <lring>Warp Ring</lring>
         </equip>
      </if>
   </idlegear>
   <weaponskill>
      <if ad_name="Tachi: shoha">
         <equip set="shoha" />
         <addtochat color="4">Shoha Time</addtochat>
      </if>
      <elseif ad_name="Impulse Drive">
         <equip set="impulse" />
         <addtochat color="4">Impulse Time</addtochat>
      </elseif>
      <else>
